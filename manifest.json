{
    "manifest_version": 3,
    "name": "ProGist",
    "version": "1.0",
    "description": "Summarizes discussions in Prog using AI",
    "permissions": [
        "storage",
        "scripting",
        "activeTab",
        "downloads"
    ],
    "files": [
        "scripts/content.js"
    ],
    "host_permissions": [
        "https://www.prog.co.il/threads/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}